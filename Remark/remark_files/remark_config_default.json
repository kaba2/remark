{

	"generators" :
	{
		"Remark" :  
		{
			"type" : "RemarkPage",
			"arguments" : 
			{
				"template" : "$(Remark)/remark_template.txt"
			},
			"tags" :
			{
				"parent" : "[[Parent]]"
			}
		},

		"CppCode" :  
		{
			"type" : "RemarkTemplate",
			"arguments" : 
			{
				"template" : "$(Remark)/cppcode_template.txt"
			},
			"tags" :
			{
		        "description" : "Description",
		        "detail" : "Detail",
		        "parent" : "Documentation",
		        "parentOf" : "DocumentationOf",
		        "author" : "Author"
			}
		},

		"Code" :
		{
			"type" : "RemarkTemplate",
			"arguments" : 
			{
				"template" : "$(Remark)/code_template.txt"
			},
			"tags" :
			{
		        "description" : "Description",
		        "detail" : "Detail",
		        "parent" : "Documentation",
		        "parentOf" : "DocumentationOf",
		        "author" : "Author"
			}
		},

		"Orphan" :
		{
			"type" : "RemarkTemplate",
			"arguments" : 
			{
				"template" : "$(Remark)/orphan_template.txt"
			},
			"tags" : 
			{
			}
		},

		"Directory" :
		{
			"type" : "RemarkTemplate",
			"arguments" : 
			{
				"template" : "$(Remark)/directory_template.txt"
			},
			"tags" : 
			{
			}
		}
	},

	"nameToGenerator" : 
	{
		"txt" : "Remark",

		"cpp" : "CppCode",
		"cc" : "CppCode",
		"h" : "CppCode",
		"hh" : "CppCode",
		"hpp"  : "CppCode",

		"py" : "Code",
		"m" : "Code",
		"pm" : "Code",
		"pl" : "Code",
		"css" : "Code",
		"js" : "Code",
		"lua" : "Code",

		"remark-orphan" : "Orphan",
		"remark-index" : "Directory"
	},

	"disable-warning" : 
	[
	],

	"include" :
	[
		"*.txt",
		"*.py",
		"*.js",
		"*.css",
		"*.png",
		"*.svg",
		"*.json",
		"index.htm"
	],

	"exclude" :
	[
		"remark_options",
		"MANIFEST.in",
		"license.txt",
		"remark_license.txt",
		"Remark/remark_files/highslide/*",
		"Remark/remark_files/*template.txt",
		"docs/*",
		"MANIFEST",
		"build/*",
		"dist/*",
		".hg*",
		".DS*",
		"*.pyc"
	]

}
