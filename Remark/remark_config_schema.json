{
	"$schema": "http://json-schema.org/draft-04/schema#",

	"definitions" :
	{
		"string_to_string" :
		{
			"type" : "object",
			"properties" : 
			{
				"/" : {}
			},
			"patternProperties" : 
			{
				"^.*$" : {"type" : "string"}
			}
		},
		"string_set" :
		{
			"type" : "array",
			"items" :
			{
				"type" : "string"
			}
		}
	},

	"type" : "object",
	"properties" : 
	{
		"generators" : 
		{
			"type" : "array",
			"items" : 
			{
				"type": "object",
				"properties" :
				{
					"name" : { "type" : "string" },
					"type" : { "type" : "string" },
					"arguments" :
					{
						"type" : "object",
						"properties" :
						{
							"template" : {"type" : "string"}
						}
					},
					"tags" :
					{
						"$ref" : "#/definitions/string_to_string"
					}
				},
				"required" : 
				[
					"name", 
					"type"
				]
			}
		},
		"associations" :
		{
			"$ref" : "#/definitions/string_to_string"
		},
		"disable-warning" :
		{
			"$ref" : "#/definitions/string_set"
		},
		"include" :
		{
			"$ref" : "#/definitions/string_set"
		},
		"exclude" :
		{
			"$ref" : "#/definitions/string_set"
		},
		"flags" :
		{
			"$ref" : "#/definitions/string_set"
		}
	}
}
